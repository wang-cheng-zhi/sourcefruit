<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>澄园商城</title>
  <!-- Bootstrap Styles-->
  <link href="/assets/css/bootstrap.css" rel="stylesheet" />
  <!-- FontAwesome Styles-->
 <link href="/assets/css/font-awesome.css" rel="stylesheet" />
  <!-- Morris Chart Styles-->
 <link href="/assets/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
     <!-- Custom Styles-->
 <link href="/assets/css/custom-styles.css" rel="stylesheet" />
 <link href="/stylesheets/shopping-add.css" rel="stylesheet" />
  <!-- Google Fonts-->
<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
  <div id="wrapper">
      <% include common.ejs %>
      <div id="page-wrapper" >
            <div id="page-inner">
			  <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            澄园果园 <small>澄园在线</small>
                        </h1>
                    </div>
                </div> 
                 <!-- /. ROW  -->
              <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           商品新增
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-9">
                                    <h4>新增</h4>
                                    <div role="form">
                                        <div class="form-group has-success">
                                            <label class="control-label" for="inputSuccess">商品编号</label>
                                            <input type="text" class="form-control" id="bianhao">
                                        </div>
                                        <div class="form-group has-warning">
                                            <label class="control-label" for="inputWarning">商品名称</label>
                                            <input type="text" class="form-control" id="name">
                                        </div>
                                        <div class="form-group">
                                            <label>商品图片</label>
                                            <div class="from-group-img">
                                                <img src=""/>
                                            </div>
                                            <input type="file"  id="inputWarning">
                                        </div>
                                        <div class="form-group has-warning">
                                            <label class="control-label" for="inputWarning">商品描述</label>
                                            <input type="text" class="form-control" id="miaoshu">
                                        </div>
                                        <div class="form-group has-error">
                                            <label class="control-label" for="inputError">商品价格</label>
                                            <input type="text" class="form-control" id="price">
                                        </div>

                                        <div class="form-group has-error">
                                            <label class="control-label" for="inputError">商品数量</label>
                                            <input type="text" class="form-control" id="sl">
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-danger addbtn">添加</button>    
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>

                        <!-- /.panel-body -->
                    </div>
                    
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
  </div>
   <!-- /. WRAPPER  -->
    <!-- JS Scripts-->
    <!-- jQuery Js -->
    <script src="/assets/js/jquery-1.10.2.js"></script>
     <script type="text/javascript">
     $(function(){
      var $ul = $("#main-menu");
      //console.log($ul.children())
      $ul.children().find("a").removeClass().eq(8).addClass("active-menu")
    })
     </script>
      <!-- Bootstrap Js -->
    <script src="/assets/js/bootstrap.min.js"></script>
    <!-- Metis Menu Js -->
    <script src="/assets/js/jquery.metisMenu.js"></script>
     <!-- Morris Chart Js -->
     <script>
      
        $(".addbtn").click(function(){
          $.ajax({
            type:"post",
            url:"/goods/add",
            data:{bianhao:$("#bianhao").val(),name:$("#name").val(),
                  miaoshu:$("#miaoshu").val(),price:$("#price").val(),sl:$("#sl").val()},
            success:function(data){
              if(data.code == 0){
                location.href = "/goods/shopping-list"
              }else{
                alert("新增失败!提示：检查是否商品编号重复")
              }
            }
          })
        })
      
     </script>
      <!-- Custom Js -->
    <!---<script src="/assets/js/custom-scripts.js"></script>-->
    
</body>
</html>
      